<h1>Add Another Scientist</h1>

<% if @scientist.errors %>
    <%@scientist.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<%= form_for @scientist do |s| %>
<%= s.label :name %>
<%= s.text_field :name %>
<%= s.label :field_of_study %>
<%= s.text_field :field_of_study %>

<br><%= s.submit %>
<% end %>

<br>
<br>
<%= link_to "Back", scientists_path %>
<br>
<%= link_to "Start Over", about_path %>